<?xml version="1.0" encoding="utf-8"?>
<!--main layout-->
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:id="@+id/transactionCard"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/green_001"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp"
    android:layout_marginVertical="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_trans"
        android:id="@+id/linear_layout_pesanan"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="450px"
            android:layout_height="320px"
            android:orientation="vertical"
            android:background="@color/white_001">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_title_trans"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/title_transaction"
                    android:textAlignment="center"
                    android:textColor="@color/green_002"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintHorizontal_bias="0.495"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/title_transaction_queue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/queue"
                    android:textAlignment="center"
                    android:textColor="@color/green_002"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/textView5"
                    card_view:layout_constraintVertical_bias="0.0" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"

            android:orientation="vertical">
            <TextView
                android:id="@+id/txtIdTransaksiHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/green_002"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="@string/id_transaction" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_metode" />
                <TextView
                    android:layout_width="25px"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:layout_marginBottom="5dp"
                    android:text="@string/titik_dua" />
                <TextView
                    android:id="@+id/txtMetodePembayaranTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:layout_marginBottom="5dp"
                    android:text="@string/metode" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_total" />
                <TextView
                    android:layout_width="25px"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:layout_marginBottom="5dp"
                    android:text="@string/titik_dua" />
                <TextView
                    android:id="@+id/txtTotalTransaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:layout_marginBottom="5dp"
                    android:text="@string/total_transaction" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/green_002"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_002"
                    android:text="@string/title_tanggal_transaksi"/>
                <TextView
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/txtTanggalTransaksi"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/green_002"
                    android:text="@string/tanggal_transaksi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>