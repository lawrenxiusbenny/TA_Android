<?xml version="1.0" encoding="utf-8"?>
<!--main layout-->
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="#EFFFE0"
    card_view:cardCornerRadius="10dp"
    android:layout_marginVertical="3pt"
    card_view:cardElevation="3dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_pesanan"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="450px"
            android:layout_height="320px"
            card_view:cardBackgroundColor="@color/shimmer">
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:background="@color/shimmer"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textColor="@color/shimmer"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="@string/id_transaction" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_metode" />
                <TextView
                    android:layout_width="25px"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/titik_dua" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/metode" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_total" />
                <TextView
                    android:layout_width="25px"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/titik_dua" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="13dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/total_transaction" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/shimmer"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:text="@string/title_tanggal_transaksi"/>
                <TextView
                    android:layout_width="50px"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:text=":"/>
                <TextView
                    android:layout_width="225px"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12dp"
                    android:background="@color/shimmer"
                    android:textColor="@color/shimmer"
                    android:text="@string/tanggal_transaksi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>