<?xml version="1.0" encoding="utf-8"?>
<!--main layout-->
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:id="@+id/transactionCard"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/shimmer_bg"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp"
    android:layout_marginVertical="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_trans"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:background="@color/shimmer">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/bg_title_trans"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/title_transaction"
                    android:textAlignment="center"
                    android:textColor="@color/shimmer"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/queue"
                    android:textAlignment="center"
                    android:textColor="@color/shimmer"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"

            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/shimmer"
                android:background="@color/shimmer"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:text="@string/id_transaction" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_metode" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/titik_dua"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/metode" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/title_total" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/titik_dua"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="45"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:layout_marginBottom="5dp"
                    android:text="@string/total_transaction" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/shimmer"/>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:text="@string/title_tanggal_transaksi"/>
                <TextView
                    android:layout_width="15dp"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="@color/shimmer"
                    android:background="@color/shimmer"
                    android:text="@string/tanggal_transaksi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>