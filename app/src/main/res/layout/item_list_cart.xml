<?xml version="1.0" encoding="utf-8"?>

<com.chauthai.swipereveallayout.SwipeRevealLayout
    android:layout_width="match_parent"
    android:id="@+id/swipeLayout"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:mode="same_level"
    app:dragEdge="right">

<!--    swipe layout-->
    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
    >
        <TextView
            android:id="@+id/textEdit"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#6578b5"
            android:gravity="center"
            android:text="EDIT"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/textDelete"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#b56565"
            android:gravity="center"
            android:text="DELETE"
            android:textColor="@color/white"/>
    </LinearLayout>

    <!--main layout-->
    <androidx.cardview.widget.CardView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardBackgroundColor="@color/green_001"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_layout_pesanan"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gambar_menu_pesanan"
                android:layout_width="450px"
                android:layout_height="320px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtNamaMenuPesanan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="16dp"
                    android:textColor="@color/green_002"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:text="Nama Menu" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txtHargaMenuPesanan"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:textColor="@color/green_002"
                        android:text="Harga Menu"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/green_002"
                        android:text="X"/>
                    <TextView
                        android:id="@+id/txtJumlahPesanan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/green_002"
                        android:textSize="12dp"
                        android:text="5"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"/>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="225px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="12dp"
                        android:textColor="@color/green_002"
                        android:text="Sub Total"/>
                    <TextView
                        android:layout_width="10px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:textColor="@color/green_002"
                        android:textAlignment="center"
                        android:text=":"/>
                    <TextView
                        android:id="@+id/subTotalPesanan"
                        android:layout_width="225px"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:textColor="@color/green_002"
                        android:text="total harga"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</com.chauthai.swipereveallayout.SwipeRevealLayout>